{
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest auth-client",
            "program": "${workspaceFolder}/node_modules/@nrwl/cli/bin/nx.js",
            "cwd": "${workspaceFolder}",
            "args": [
                "test",
                "auth-client",
                "--testPathPattern=${fileBasenameNoExtension}",
                "--runInBand"
            ],
            "skipFiles": ["<node_internals>/**", "node_modules/**"]
        }
    ]
}
